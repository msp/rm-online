/*Mixins*/
rm-layout()
  margin 0 auto
  max-width 960px
  background #fff

rm-menu()
  .pure-menu
    background #fff
    /*box-shadow 0 2px 2px rgba(0,0,0, 0.10)*/

/*Constants*/
primary-color = #0187A4

.content
  rm-layout()
  color #333333
  padding-top 20px

.header
  rm-layout()
  rm-menu()
  hr
    background-color primary-color
    height 3px
    border 0px

.footer
  rm-layout()
  rm-menu()

