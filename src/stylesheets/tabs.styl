@import common

// overrides/additions for docs
#docResponsiveTabs.r-tabs
  .r-tabs-nav
    background-color inherit
    margin-bottom 40px
    .r-tabs-tab
      border-bottom 2px solid rm-light-grey
      width 25%
    .r-tabs-anchor
      width 100%
      padding-left 10px
      padding-right 10px

.r-tabs
  position relative
  .r-tabs-nav
    background-color rm-dark-grey
    border-bottom 0px solid #ccc
    margin-bottom 50px
    .r-tabs-tab
      h3, h4, h5
        margin-top 0px
        margin-bottom 0px

      position relative
      border-right 2px solid rm-light-grey
    .r-tabs-anchor
      background rm-dark-grey
      padding 12px 40px
      display inline-block
      text-decoration none
      color #fff
      min-width 100px
      text-align center
    .r-tabs-state-active
      .r-tabs-anchor
        color #fff
        background-color rm-blue
    .r-tabs-state-disabled
      opacity 0.5
  .r-tabs-panel
    margin-bottom 3px
    padding 0px
    .pure-u-1-24
      .l-box
        min-height 200px
        border-left 1px solid rm-blue
      .l-box.no-border
        border none
  .r-tabs-accordion-title
    .r-tabs-anchor
      display block
      padding 10px
      background-color rm-dark-grey
      color #fff
      text-decoration none
      margin-bottom 3px
    &.r-tabs-state-disabled
      opacity 0.5
    &.r-tabs-state-active
      margin-bottom 30px
      .r-tabs-anchor
        background-color rm-blue
        color #fff
        border-top 1px solid #ccc
        border-right 1px solid #ccc
        border-left 1px solid #ccc
        margin-bottom 0

