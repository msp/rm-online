- var formations = true
- var searchButton = "Check name"
- var searchTitle = "Check company name availability"

.pure-u-1
  .l-box
    +breadcrumbs_from(bcList)

    h1.hidden= h1
    p.heading= heading || title

  .pure-g-r.search
    .pure-u-1-2
      .l-box
        p.intro-copy
          = intro || "TODO - replace when SEO text has been defined on main search page"
          br
          | Compare our
          a(href="#" data-toggle='modal', data-target='#pricing-packages-modal')  pricing packages
          |.
    .pure-u-1-2
      .l-box
        img.intro-icon(src="/images/search/search-icon-large.png", alt="search for company information")

.pure-u-1
  .l-box
    include ../search/_search

if !term
  .pure-u-1-2
    .l-box
      h3= benefitsHeading
      ul
        each benefit in benefits
          li=benefit

  .pure-u-1-2
    .l-box
      h3= servicesHeading
      ul
        each service in services
          li=service

.pure-u-1
  .l-box
    include _modal-pricing-packages.jade
