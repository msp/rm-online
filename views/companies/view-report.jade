extends ../index

block main
  .pure-u-1
    .l-box
      +breadcrumbs_from(bcList)

      if (error)
        h1= "Error ["+error.code[0]+"]: "+error.description[0]
      else
        h1.capitalize= String(company.name).toLowerCase()
  .pure-u-1
    .pure-g-r
      .pure-u-1-3
        .l-box
          if images[vendor.toLowerCase()]
            img.rm-service-grey(src="/images/partner-logos/bw/#{slug(images[vendor.toLowerCase()]).toLowerCase()}.png", alt="#{images[vendor.toLowerCase()]}")
          else
            p #{vendor}
  .pure-u-1
    .pure-g-r
      if reports
        each rep, index in reports[vendor.toUpperCase()][0].report
          if index < 3
            .pure-u-1-3
              .l-box
                .report-box.simpleCart_shelfItem
                  .pure-g
                    .pure-u-19-24
                      .l-box
                        .report-name
                          h4.grey-font= rep.name
                        .checkout-name.item_name.hidden
                          p  #{company.name} | #{company.cro_number} | #{vendor} | #{rep.name}
                        .item_rmid.hidden #{company.cro_number}-#{rep.name}
                    .pure-u-5-24
                      img.pdf(src="/images/reports/pdf.png", alt="PDF")
                    .pure-u-1
                      .l-box
                        p= rep.description
                        .pure-g
                          .pure-u-9-24
                            .report-price.item_price Â£#{rep.vat}
                            input(type="hidden" value="1" class="item_Quantity")
                          .pure-u-15-24
                            a(id="#{company.cro_number}-#{rep.name}").pure-button.pure-button-primary.item_add ADD TO CART
