extends ../index

block main
  .pure-u-1
    .l-box
      +breadcrumbs_from(bcList)

      if (error)
        h1= "Error ["+error.code[0]+"]: "+error.description[0]
      else
        h1.capitalize= String(company.name).toLowerCase()
  .pure-u-1
    .pure-g-r
      .pure-u-1-3
        .l-box
          if images[vendor.toLowerCase()]
            img(src="/images/partner-logos/bw/#{slug(images[vendor.toLowerCase()]).toLowerCase()}.jpg", alt="#{images[vendor.toLowerCase()])}")
          else
            p #{vendor}
  .pure-u-1
    .pure-g-r
      if reports
        each rep, index in reports[vendor.toUpperCase()][0].report
          if index < 3
            .pure-u-1-3
              .l-box
                .report-box
                  .pure-g
                    .pure-u-19-24
                      .l-box
                        .report-name
                          h4.grey-font= rep.name
                    .pure-u-5-24
                      img.pdf(src="/images/reports/pdf.png", alt="PDF")
                    .pure-u-1
                      .l-box
                        p= rep.description
                        .pure-g
                          .pure-u-8-24
                            .report-price Â£#{rep.vat}
                          .pure-u-16-24
                            .pure-button.pure-button-primary ADD TO BASKET
