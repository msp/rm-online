extends ../index
include ../mixins/m-contact

block main
  .pure-u-1
    .l-box
      +breadcrumbs_from(bcList)

      if (error)
        h1= "Error ["+error.code[0]+"]: "+error.description[0]
      else
        h1.capitalize= String(company.name).toLowerCase()

      .pure-g-r
        if company
          .pure-u-1
            #responsiveTabs
              ul
                li
                  h3: a(href="#details") Details
                li
                  h3: a(href="#reports") Reports
                li
                  h3: a(href="#documents") Documents

              #details
                .pure-g-r
                  .pure-u-5-24
                    .company-data
                      p Registered Number
                      span#cro_number| #{company.id}

                    .company-data
                      p Registered Office
                      address
                        | #{company.address1}
                        | <br/> #{company.address2}
                        | <br/> #{company.address3}
                        | <br/> #{company.address4}
                        | <br/> #{company.postcode}

                  if country == "GB"
                    .pure-u-1-24.pure-hidden-phone
                      .l-box
                        br
                    .pure-u-5-24
                      .company-data
                        p Company Type
                        | #{company.type}

                      .company-data
                        p Incorporated
                        | #{company.incorporation_date}

                      .company-data
                        p Status
                        | #{company.status}
                    .pure-u-1-24.pure-hidden-phone
                      .l-box
                        br
                    .pure-u-5-24
                      .company-data
                        p Latest Accounts
                        | #{company.latestAccounts}
                      .company-data
                        p Latest Annual Return
                        | #{company.latestAnnualReturn}
                      .company-data
                        p Accounts Type
                        | #{company.accountsType}
              #reports
                .pure-g-r
                  if reports
                    each vendor in Object.keys(reports)
                      //- sometimes we get this instead of an empty set
                      if reports[vendor][0] != "\n"
                        .pure-u-1-3
                          .l-box
                            .report-box.hover-shadow
                              a(href="/companies/"+country+"/"+company.id+"/"+slug(company.name).toLowerCase()+"/reports/"+slug(vendor).toLowerCase(), class=vendor.toLowerCase())
                                if images[vendor.toLowerCase()]
                                  img(src="/images/partner-logos/bw/#{slug(images[vendor.toLowerCase()]).toLowerCase()}.png", alt="#{images[vendor.toLowerCase()]}")
                                else
                                  p #{vendor}

                                each val in [1,2,3]
                                  if reports[vendor]
                                    if reports[vendor][0].report[val-1]
                                      div(class="report-#{val}") #{reports[vendor][0].report[val-1].description}
                                    else
                                      div(class="report-#{val}")
                                        br
              #documents
                .pure-g-r
                  if documents
                    each vendor in Object.keys(documents)
                      if vendor == "RM"
                        .pure-u-1-3
                          .l-box
                            .report-box.hover-shadow
                              a(href="/companies/"+country+"/"+company.id+"/documents/"+slug(vendor).toLowerCase())
                                img(src="/images/partner-logos/bw/#{slug(vendor).toLowerCase()}.png", alt="#{vendor}")
                                each doc, index in documents[vendor][0].document
                                  if index < 3
                                    div(class="document-#{index+1}") [#{doc.document_type}] #{doc.doc_description}, #{doc.document_id}


                                //- Need something more sophistciated to group the available docs into 3, by cabinet
                                //- - var label = ""
                                //- - var comma = ""
                                //- - var divIndex = 1
                                //- - var cabCount = 1
                                //- each cabinet, index in documentsByCabinet[0][vendor.toUpperCase()]
                                //-   //- if cabinet.values.length > 0
                                //-   if cabCount == 4
                                //-     div(class="document-#{divIndex}") #{label}
                                //-     - label = ""
                                //-     - comma = ""
                                //-     - divIndex++
                                //-     - cabCount = 1
                                //-   else
                                //-     - label += comma+cabinet.label
                                //-     - comma = ", "
                                //-     - cabCount++
                    // CH portal login gubbins via Horus.
                    .pure-u-1-3
                      .l-box
                        .report-box.hover-shadow
                          img(src="/images/partner-logos/bw/companies-house.png", alt="companies house")

                          form(class="pure-form", action='http://www.rmonline.com/servlet/com.armadillo.chLogin.chLogin', method='GET')
                            .document-1
                              | RM Client Login
                            .document-2.ch
                              input(name='error_page', type='hidden', value='companiesx.htm')
                              input.document-2.pure-input-1(type='text', name='reference', placeholder='Client Ref, up to 15 chars, A-Z & 0-9' required)
                            .document-3.ch
                              button.btn.pure-button.pure-button-primary(type='submit') Sign In


                  if country.toLowerCase() != "gb"
                    article.pure-u-2-5
                      .l-box
                        h3.international Available on request
                        p Call Julia to discuss your requirements.
                    article.pure-u-3-5
                      .l-box
                        #contact_documents.contact
                          +contact("Documents & Reports", "Julia Kanger", "+44 (0) 1462 427 300", "infodesk@rmonline.com", "")
