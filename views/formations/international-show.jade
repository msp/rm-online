extends ../index

block main
  .pure-u-1
    .l-box
      +breadcrumbs_from(bcList)
      h1 #{title}

      article.pure-u-1
        google-map(latitude="#{country.lat}", longitude="#{country.lon}" zoom="7")
          //- google-map-marker(latitude="{country.lat}", longitude="#{country.lon}" title="#{title}")

        each intro_p in country.intro
          p #{intro_p}

        if country.features
          h3 Features
          ul.features
            each feature in country.features
              li #{feature}

        if country.highlights
          h3 Highlights
          ul.highlights
            each highlight in country.highlights
              li #{highlight}

        if country.uses
          h3 Uses
          ul.uses
            each use in country.uses
              li #{use}

        if country.social
          h3 Social and Economic Indicators
          ul.uses
            each social in country.social
              li #{social}

        if country.guidelines
          h3 Guidelines
          each guideline in country.guidelines
            p #{guideline}

